{
  "title": "Change caps_lock to Esc and Control",
  "rules": [{
    "description": "Change caps_lock to escape when tapped, and control when held.",
    "manipulators": [{
      "type": "basic",
      "from": {
        "key_code": "left_control",
        "modifiers": {
          "optional": [ "any" ]
        }
      },
      "to": [{
        "key_code": "left_control",
        "lazy": true
      }],
      "to_if_alone": [{
        "key_code": "escape"
      }]
    }]
  }]
}
